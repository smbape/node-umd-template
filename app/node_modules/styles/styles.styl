// http://tj.github.io/nib/
@import 'nib'

#content
    padding: 35px

[class*=" icon-"], [class^="icon-"]
    display: inline-block // mandatory for icon animations

#loader
    display: none
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100%
    background-color: transparent
    z-index: 60

    .loader
        width: 100%

        .progressbar
            background-color: #c9302c

        .bufferbar
            background-image: linear-gradient(to right,rgba(255,255,255,.7),rgba(255,255,255,.7)),linear-gradient(to right,#c9302c,#c9302c)

    .spinner
        font-size: 18px
        vertical-align: middle
        animation: spin 1s linear infinite

@keyframes spin { 100% { transform: rotate(360deg) } }
